{
    "name": "react-ui-spinners",
    "version": "1.0.0",
    "description": "CSS React Spinners",
    "main": "dist/bundle.cjs.js",
    "module": "dist/bundle.esm.js",
    "sideEffects": false,
    "scripts": {
        "prebuild": "rimraf dist",
        "build": " rollup -c",
        "lint": "eslint '**/*.{js,ts,tsx}'",
        "lint:fix": "prettier-eslint **/*.js --write",
        "storybook": "start-storybook -p 9001 -c storybook",
        "storybook:build": "build-storybook -c storybook",
        "test": "jest",
        "test:watch": "jest --watch",
        "test-coverage": "jest --coverage",
        "test:staged": "jest --findRelatedTests",
        "test:coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "npm run lint:fix",
            "npm run test:staged",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/aadhil96/react-ui-spinners.git"
    },
    "keywords": [
        "react",
        "ui",
        "spinners"
    ],
    "author": "Aadhil",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/aadhil96/react-ui-spinners/issues"
    },
    "homepage": "https://github.com/aadhil96/react-ui-spinners#readme",
    "devDependencies": {
        "@babel/core": "^7.6.2",
        "@babel/preset-env": "^7.6.2",
        "@babel/preset-react": "^7.0.0",
        "@storybook/addon-options": "^5.2.1",
        "@storybook/react": "^5.2.1",
        "babel-jest": "^24.9.0",
        "babel-loader": "^8.0.6",
        "coveralls": "^3.0.6",
        "eslint": "^6.4.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jest": "^22.17.0",
        "eslint-plugin-node": "^10.0.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.14.3",
        "eslint-plugin-standard": "^4.0.1",
        "husky": "^1.3.1",
        "jest": "^24.9.0",
        "lint-staged": "^8.1.5",
        "prettier-eslint": "^9.0.0",
        "prettier-eslint-cli": "^4.7.1",
        "react": "^16.10.1",
        "react-dom": "^16.10.1",
        "react-test-renderer": "^16.10.1",
        "rimraf": "^3.0.0",
        "rollup": "^1.10.0",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-terser": "^5.1.2",
        "rollup-plugin-uglify": "^6.0.3"
    },
    "peerDependencies": {
        "react": ">=16.2"
    },
    "dependencies": {},
    "jest": {
        "moduleNameMapper": {
            "\\.css$": "<rootDir>/mocks/styles.js"
        }
    }
}
